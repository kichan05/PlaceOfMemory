<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaceOfMemory" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_900</item>
        <item name="colorPrimaryVariant">@color/purple_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_400</item>
        <item name="colorSecondaryVariant">@color/purple_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font</item>


        <item name="txt_txtColor">@color/black_600</item>

        <!--    Button style    -->
        <item name="android:buttonStyle">@style/btn_fill_style</item>

        <item name="btn_fill_bgColor">@color/purple_900</item>
        <item name="btn_fill_txtColor">@color/white</item>

        <item name="btn_secon_bgColor">@color/purple_400</item>
        <item name="btn_secon_txtColor">@color/purple_900</item>

        <item name="btn_sub_bgColor">@color/purple_100</item>
        <item name="btn_sub_txtColor">@color/purple_900</item>


        <!--    EditText Style    -->
        <item name="editTextStyle">@style/edt_style</item>

        <item name="edt_txtColor">@color/black</item>
        <item name="edt_bgColor">@color/materialGray3</item>
    </style>
</resources>