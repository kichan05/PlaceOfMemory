<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DesignSystemActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="20dp"

            android:orientation="vertical"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="텍스트 입니당"
                android:textSize="20sp" />

            <Button
                style="@style/btn_fill_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Fill Button"

                android:tooltipText="sadads" />

            <Button
                style="@style/btn_secon_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="12dp"
                android:text="Secon Button" />

            <Button
                style="@style/btn_sub_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="12dp"
                android:text="Sub Button" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="12dp"

                android:drawableLeft="@drawable/ic_person"
                android:hint="이름을 입력하세요." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:buttonTint="?attr/colorPrimary" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:buttonTint="?attr/colorPrimary"
                    android:checked="true" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:buttonTint="?attr/colorPrimary" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:buttonTint="?attr/colorPrimary"
                    android:checked="true" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>