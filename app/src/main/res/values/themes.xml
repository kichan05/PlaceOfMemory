<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaceOfMemory" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_900</item>
        <item name="colorPrimaryVariant">@color/purple_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_400</item>
        <item name="colorSecondaryVariant">@color/purple_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font</item>

        <item name="txt_txtColor">@color/white</item>

        <!--    Button style    -->
        <item name="android:buttonStyle">@style/btn_fill_style</item>

        <item name="btn_fill_bgColor">@color/purple_900</item>
        <item name="btn_fill_txtColor">@color/white</item>

        <item name="btn_secon_bgColor">@color/purple_400</item>
        <item name="btn_secon_txtColor">@color/purple_900</item>

        <item name="btn_sub_bgColor">@color/purple_100</item>
        <item name="btn_sub_txtColor">@color/purple_900</item>
        
        <!--    EditText Style    -->
        <item name="editTextStyle">@style/edt_style</item>

        <item name="edt_txtColor">@color/black</item>
        <item name="edt_bgColor">#DFDFDF</item>
    </style>

    <!--  Button style  -->
    <style name="btn_fill_style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/btn_fill_txtColor</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:background">@drawable/sh_button_background</item>
        <item name="android:backgroundTint">?attr/btn_fill_bgColor</item>

        <item name="android:paddingVertical">@dimen/btn_padding</item>
    </style>

    <style name="btn_secon_style" parent="btn_fill_style">
        <item name="android:textColor">?attr/btn_secon_txtColor</item>

        <item name="android:backgroundTint">?attr/btn_secon_bgColor</item>
    </style>

    <style name="btn_sub_style" parent="btn_fill_style">
        <item name="android:textColor">?attr/btn_sub_txtColor</item>
        
        <item name="android:backgroundTint">?attr/btn_sub_bgColor</item>
    </style>
    
    <style name="edt_style" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">@color/materialGray6</item>

        <item name="android:background">@drawable/sh_button_background</item>
        <item name="android:backgroundTint">?attr/edt_bgColor</item>

        <item name="android:drawablePadding">4dp</item>

        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">12dp</item>
    </style>
</resources>